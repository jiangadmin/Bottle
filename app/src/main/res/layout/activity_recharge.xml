<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical">

    <include layout="@layout/view_title_bar" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_heigt"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="充值金额"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="5dp"
                    android:src="@drawable/ic_balance" />

                <TextView
                    android:id="@+id/recharge_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="600="
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/recharge_rmb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="6.00元"
                    android:textColor="@color/style_color"
                    android:textSize="18sp" />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_heigt"
            android:layout_marginTop="10dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingLeft="16dp"
            android:text="支付方式"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/recharge_alipay"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_heigt"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_alipay" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:text="支付宝" />


            <ImageView
                android:id="@+id/recharge_alipay_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_select" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/recharge_wechat"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_heigt"
            android:layout_marginTop="1dp"
            android:background="@color/white"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_wechat_pay" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:text="微信支付" />


            <ImageView
                android:id="@+id/recharge_wechat_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_unselect" />

        </RelativeLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:paddingLeft="16dp">

            <CheckBox
                android:id="@+id/recharge_checkBox"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="我已阅读并同意"
                android:textColor="@color/gray_6" />

            <TextView
                android:id="@+id/recharge_agreement"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="《充值协议》"
                android:textColor="@color/style_color" />

        </LinearLayout>

        <Button
            android:id="@+id/recharge_submit"
            android:layout_width="match_parent"
            android:layout_height="@dimen/edit_heigt"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/btn_style"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>


</LinearLayout>