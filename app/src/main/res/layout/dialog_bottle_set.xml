<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/dialog_bottle_set_esc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="40dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_turnoff" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginBottom="2.5dp"
                android:background="@drawable/dialog_bottle_title_bg"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingTop="4.6dp"
                android:text="让随缘帮你寻找你的TA吧"
                android:textColor="@color/gray_6"
                android:textSize="12sp" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:scaleType="centerCrop"
                android:src="@mipmap/icon_jwp" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="260dp"
            android:background="@drawable/dialog_bottle_bg"
            android:padding="10dp">

            <EditText
                android:gravity="left|top"
                android:hint="说点什么吧..."
                android:textColor="@color/gray_6"
                android:id="@+id/dialog_bottle_set_message"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:background="@drawable/xz_bg"
                android:lines="3" />

            <Button
                android:id="@+id/dialog_bottle_set_random"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/dialog_bottle_set_message"
                android:layout_below="@+id/dialog_bottle_set_message"
                android:text="写点啥？" />

            <Button
                android:id="@+id/dialog_bottle_set_submit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:text="扔出去" />

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>