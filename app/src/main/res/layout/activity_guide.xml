<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activity.start.Guide_Activity">

    <android.support.v4.view.ViewPager
        android:id="@+id/guide_vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <LinearLayout
        android:id="@+id/guide_select_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dp"
        android:orientation="horizontal"
        android:text="">

        <TextView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:background="@drawable/guide_selet" />

        <TextView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/guide_not_select" />

        <TextView
            android:layout_width="5dp"
            android:layout_height="5dp"
            android:layout_marginLeft="5dp"
            android:background="@drawable/guide_not_select" />
    </LinearLayout>

    <Button
        android:id="@+id/guid_experience"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/guide_select_bottom"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dp"
        android:background="@color/style_color"
        android:text="立即体验"
        android:textColor="@color/white"
        android:visibility="gone" />
</RelativeLayout>
