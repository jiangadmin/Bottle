<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/background"    android:orientation="vertical"    tools:context=".activity.mian.mine.Mine_Fragment">    <include layout="@layout/view_title_bar" />    <LinearLayout        android:id="@+id/mine_info"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@color/white"        android:orientation="horizontal"        android:padding="15dp">        <com.sy.bottle.view.CircleImageView            android:id="@+id/mine_head"            android:layout_width="50dp"            android:layout_height="50dp"            android:src="@drawable/head_me" />        <LinearLayout            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_marginLeft="15dp"            android:layout_weight="1"            android:orientation="vertical">            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:gravity="center_vertical"                android:orientation="horizontal">                <TextView                    android:id="@+id/mine_nickname"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:gravity="center"                    android:singleLine="true"                    android:textColor="@color/black"                    android:textSize="18sp" />                <ImageView                    android:id="@+id/mine_sex"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:gravity="center"                    android:singleLine="true"                    android:textColor="@color/black"                    android:textSize="18sp" />            </LinearLayout>            <TextView                android:id="@+id/mine_id"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginTop="3dp"                android:textColor="@color/gray_3"                android:textSize="14sp" />        </LinearLayout>        <ImageView            android:layout_width="wrap_content"            android:layout_height="match_parent"            android:src="@drawable/ic_in" />    </LinearLayout>    <LinearLayout        android:layout_width="match_parent"        android:layout_height="50dp"        android:layout_marginBottom="1dp"        android:layout_marginTop="1dp"        android:orientation="horizontal">        <TextView            android:id="@+id/mine_xx"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_weight="1"            android:background="@color/white"            android:gravity="center"            android:text="能量：0 " />        <TextView            android:id="@+id/mine_jf"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_marginLeft="1dp"            android:layout_weight="1"            android:background="@color/white"            android:gravity="center"            android:text="积分：0 " />    </LinearLayout>    <RelativeLayout        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginBottom="20dp">        <Button            android:id="@+id/mine_receive"            android:layout_width="match_parent"            android:layout_height="@dimen/edit_heigt"            android:background="@color/white"            android:drawableLeft="@drawable/ic_ny"            android:drawablePadding="10dp"            android:drawableRight="@drawable/ic_in"            android:gravity="left|center_vertical"            android:paddingLeft="16dp"            android:paddingRight="16dp"            android:text="领取今日能量"            android:textSize="14sp" />        <TextView            android:id="@+id/mine_receive_num"            android:layout_width="18dp"            android:layout_height="18dp"            android:layout_alignParentRight="true"            android:layout_centerVertical="true"            android:layout_marginRight="28dp"            android:background="@drawable/ic_round_red"            android:gravity="center"            android:padding="3dp"            android:text="10"            android:textColor="@color/white"            android:textSize="8sp"            android:translationZ="3dp" />    </RelativeLayout>    <Button        android:id="@+id/mine_mall"        android:layout_width="match_parent"        android:layout_height="@dimen/edit_heigt"        android:background="@color/white"        android:drawableLeft="@drawable/ic_cdz"        android:drawablePadding="10dp"        android:drawableRight="@drawable/ic_in"        android:gravity="left|center_vertical"        android:paddingLeft="16dp"        android:paddingRight="16dp"        android:text="能量"        android:textSize="14sp" />    <Button        android:id="@+id/mine_log"        android:layout_width="match_parent"        android:layout_height="@dimen/edit_heigt"        android:layout_marginTop="20dp"        android:background="@color/white"        android:drawableLeft="@drawable/ic_history"        android:drawablePadding="10dp"        android:drawableRight="@drawable/ic_in"        android:gravity="left|center_vertical"        android:paddingLeft="16dp"        android:paddingRight="16dp"        android:text="礼物"        android:textSize="14sp" />    <Button        android:id="@+id/mine_selfhelp"        android:layout_width="match_parent"        android:layout_height="@dimen/edit_heigt"        android:layout_marginTop="0.5dp"        android:background="@color/white"        android:drawableLeft="@drawable/ic_selphelp"        android:drawablePadding="10dp"        android:drawableRight="@drawable/ic_in"        android:gravity="left|center_vertical"        android:paddingLeft="16dp"        android:paddingRight="16dp"        android:text="咨询与帮助"        android:textSize="14sp" />    <Button        android:id="@+id/mine_news"        android:layout_width="match_parent"        android:layout_height="@dimen/edit_heigt"        android:layout_marginTop="20dp"        android:background="@color/white"        android:drawableLeft="@drawable/ic_news"        android:drawablePadding="10dp"        android:drawableRight="@drawable/ic_in"        android:gravity="left|center_vertical"        android:paddingLeft="16dp"        android:paddingRight="16dp"        android:text="官方公告"        android:textSize="14sp" />    <Button        android:id="@+id/mine_setting"        android:layout_width="match_parent"        android:layout_height="@dimen/edit_heigt"        android:layout_marginTop="0.5dp"        android:background="@color/white"        android:drawableLeft="@drawable/ic_setting"        android:drawablePadding="10dp"        android:drawableRight="@drawable/ic_in"        android:gravity="left|center_vertical"        android:paddingLeft="16dp"        android:paddingRight="16dp"        android:text="设置"        android:textSize="14sp" /></LinearLayout>