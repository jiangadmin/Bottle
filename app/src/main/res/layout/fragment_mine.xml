<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"    xmlns:app="http://schemas.android.com/apk/res-auto"    xmlns:tools="http://schemas.android.com/tools"    android:layout_width="match_parent"    android:layout_height="match_parent"    android:background="@color/background"    android:orientation="vertical"    tools:context=".activity.mian.mine.Mine_Fragment">    <include layout="@layout/view_title_bar" />    <LinearLayout        android:id="@+id/mine_info"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:background="@color/white"        android:orientation="horizontal"        android:padding="15dp">        <com.sy.bottle.view.CircleImageView            android:id="@+id/mine_head"            android:layout_width="50dp"            android:layout_height="50dp"            android:src="@drawable/head_me" />        <LinearLayout            android:layout_width="0dp"            android:layout_height="match_parent"            android:layout_marginLeft="15dp"            android:layout_weight="1"            android:orientation="vertical">            <LinearLayout                android:layout_width="match_parent"                android:layout_height="wrap_content"                android:gravity="center_vertical"                android:orientation="horizontal">                <TextView                    android:id="@+id/mine_nickname"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:gravity="center"                    android:singleLine="true"                    android:textColor="@color/black"                    android:textSize="18sp" />                <ImageView                    android:id="@+id/mine_sex"                    android:layout_width="wrap_content"                    android:layout_height="wrap_content"                    android:gravity="center"                    android:singleLine="true"                    android:textColor="@color/black"                    android:textSize="18sp" />            </LinearLayout>            <TextView                android:id="@+id/mine_id"                android:layout_width="wrap_content"                android:layout_height="wrap_content"                android:layout_marginTop="3dp"                android:textColor="@color/gray_3"                android:textSize="14sp" />        </LinearLayout>        <ImageView            android:layout_width="wrap_content"            android:layout_height="match_parent"            android:src="@drawable/ic_in" />    </LinearLayout>    <View        android:layout_width="match_parent"        android:layout_height="1px"        android:background="@color/gray_78" />    <LinearLayout        android:layout_width="match_parent"        android:layout_height="50dp"        android:layout_marginBottom="20dp"        android:background="@color/white"        android:orientation="horizontal">        <TextView            android:id="@+id/mine_xx"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_weight="1"            android:gravity="center"            android:text="能量：0 个" />        <View            android:layout_width="0.5dp"            android:layout_height="match_parent"            android:layout_marginBottom="10dp"            android:layout_marginTop="10dp"            android:background="@color/gray_78" />        <TextView            android:id="@+id/mine_jf"            android:layout_width="match_parent"            android:layout_height="match_parent"            android:layout_weight="1"            android:gravity="center"            android:text="积分：0 分" />    </LinearLayout>    <!--能量补给-->    <Button        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="0.5dp"        android:background="@color/white"        android:drawableRight="@drawable/ic_in"        android:gravity="left|center_vertical"        android:paddingLeft="15dp"        android:paddingRight="15dp"        android:text="领取今日能量"        android:textSize="16sp" />    <com.sy.bottle.view.LineControllerView        android:id="@+id/user_info_address"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:onClick="onClick"        app:canNav="true"        app:isBottom="true"        app:name="我的能量" />    <Button        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="0.5dp"        android:background="@color/white"        android:drawableRight="@drawable/ic_in"        android:gravity="left|center_vertical"        android:paddingLeft="15dp"        android:paddingRight="15dp"        android:text="我的能量"        android:textSize="16sp" />    <!--能量补给-->    <Button        android:id="@+id/mine_mall"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="0.5dp"        android:background="@color/white"        android:drawableRight="@drawable/ic_in"        android:gravity="left|center_vertical"        android:paddingLeft="15dp"        android:paddingRight="15dp"        android:text="能量补给站"        android:textSize="16sp" />    <!--礼物记录-->    <Button        android:id="@+id/mine_log"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="0.5dp"        android:background="@color/white"        android:drawableRight="@drawable/ic_in"        android:gravity="left|center_vertical"        android:paddingLeft="15dp"        android:paddingRight="15dp"        android:text="礼物记录"        android:textSize="16sp" />    <!--系统公告-->    <Button        android:id="@+id/mine_news"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="0.5dp"        android:background="@color/white"        android:drawableRight="@drawable/ic_in"        android:gravity="left|center_vertical"        android:paddingLeft="15dp"        android:paddingRight="15dp"        android:text="官方公告"        android:textSize="16sp" />    <!--好友申请-->    <Button        android:visibility="gone"        android:id="@+id/mine_friend_Confirm"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="0.5dp"        android:background="@color/white"        android:drawableRight="@drawable/ic_in"        android:gravity="left|center_vertical"        android:paddingLeft="15dp"        android:paddingRight="15dp"        android:text="好友申请"        android:textSize="16sp" />    <!--联系客服-->    <Button        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="10dp"        android:background="@color/white"        android:drawableRight="@drawable/ic_in"        android:gravity="left|center_vertical"        android:paddingLeft="16dp"        android:paddingRight="16dp"        android:text="会员自助服务"        android:textColor="@color/gray_3"        android:textSize="18sp" />    <!--设置-->    <Button        android:id="@+id/mine_setting"        android:layout_width="match_parent"        android:layout_height="wrap_content"        android:layout_marginTop="0.5dp"        android:background="@color/white"        android:drawableRight="@drawable/ic_in"        android:gravity="left|center_vertical"        android:paddingLeft="15dp"        android:paddingRight="15dp"        android:text="设置"        android:textSize="16sp" /></LinearLayout>